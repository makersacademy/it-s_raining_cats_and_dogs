<div class="panel">
	<form class="login_form" action="/login" method="POST">
	  <div>
	    <label class="loginform" for="email">Email</label>
	    <input type="text" name="email" id="email" />
	  </div>
	  <div>
	    <label class="loginform" for="password">Password</label>
	    <input type="password" name="password" id="password" />
	  </div>
	  <div class="submit">
    	<input type="submit" value="Login" />
  	</div>
  	 <a class="signuplink" href="/signup">Don't have a login? Click here to sign up.</a>
	</form>
</div>

<% unless signed_in? %>
  <div class="slide"><a href="#" class="pull-me">Login</a></div>
<% end %>

<div class='weather_icon'>
  <% weather_conditions_array.each do |condition| %>
    <%= weather_conditions(condition[0], condition[1], condition[2]) %>
  <% end %>
</div>

<div class = 'weather'>
  <%= @weather.title %></br>
  <%= @weather.condition.text %>
</div>

<% if signed_in? %>
  <div class="search">
    <%= erb :home_page_search %>
  </div>
<% end %>